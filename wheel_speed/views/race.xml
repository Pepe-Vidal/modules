<odoo>
  <data>

      <record id="wheel_speed.race_form" model="ir.ui.view">
        <field name="name">WheelSpeed race</field>
        <field name="model">wheel_speed.race</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>

                        <group>
                            <field name="name"/>
                            <field name="date_start"/>  
                            <field name="date_end"/>
                            
                            <separator/>
                            <field name="tramos"/>  
                            <separator/>

                            <field name="player1"/>
                            <field name="player2"/>
                            <field name="car1"/>  
                            <field name="car2"/>  

                            <field name="distancia"/>  
                            <field name="time1"/>  
                            <field name="time2"/>  
                            <field name="winner"/>    

                            <button name="simulate_race"
                                type="object"
                                string="carrera"
                                class="btn btn-primary"> carrea
                            </button>
                            <button name="simulate_race" type="object" class="oe_stat_button">
                                Carrera
                            </button>

                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

  <record model="ir.ui.view" id="wheel_speed.race_calendar">
      <field name="name">Races Calendar</field>
      <field name="model">wheel_speed.race</field>
      <field name="arch" type="xml">
        <calendar string="Races Calendar"
                  date_start="date_start"
                  date_stop="date_end"
                  color = "player1"
        >
          <field name="name"/>
          <field name="player1"/>
          <field name="player2"/>
        </calendar>
      </field>
    </record>


  </data>
</odoo>