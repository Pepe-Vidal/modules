<odoo>
  <data>

    <record model="ir.ui.view" id="wheel_speed.wheel_type_tree">
      <field name="name">WheelSpeed wheel_type</field>
      <field name="model">wheel_speed.wheel_type</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="diametro" />
          <field name="agarre" />
          <field name="velocidad"/>
          <field name="peso" />
          <field name="durabilidad" />
        </tree>
      </field>
    </record>

    <record id="wheel_speed.wheel_type_form" model="ir.ui.view">
        <field name="name">WheelSpeed wheel_type</field>
        <field name="model">wheel_speed.wheel_type</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>

                        <group>
                            <field name="name"/>
                            
                            <separator/>

                            <field name="diametro"/>
                            <field name="agarre"/>
                            <field name="durabilidad"/>
                            <field name="peso"/>
                            <field name="velocidad"/>

                        </group>

                        <group>
                            <field name="foto" widget="image"></field>
                        </group>
                    
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="wheel_speed.wheel_type_kanban" model="ir.ui.view">
      <field name="name">WheelSpeed wheel_type</field>
      <field name="model">wheel_speed.wheel_type</field>
      <field name="arch" type="xml">
        <kanban>
          <field name="name" />
          <field name="id" />
          <field name="foto" />
          <field name="diametro"/>
          <field name="agarre"/>
          <field name="durabilidad"/>
          <field name="peso"/>
          <field name="velocidad"/>
            
          <templates>
            <t t-name="kanban-box">
              
            <div class="oe_kanban_card o_kanban_record_has_image_fill">


              <div class="o_kanban_image_fill_left d-none d-md-block"> 
              <a type="open">
                <img class="oe_kanban_image"
                t-att-alt="record.name.value"
                t-att-src="kanban_image('wheel_speed.wheel_type', 'foto', record.id.value, placeholder)" />
              </a>
              </div>
              
                                <div class="oe_kanban_details d-flex flex-column">
                                <strong class="o_kanban_record_title oe_partner_heading"><field name="name"/></strong>
                                    <ul> 
                                    <li><field name="diametro" /> </li>
                                    <li><field name="agarre" /> </li>
                                    <li><field name="velocidad" /> km/h </li>
                                    <li><field name="peso" /> kg</li>
                                    <li><field name="durabilidad" /> </li>
                                    </ul>
                                </div>

            </div>
            </t>
          </templates>
        </kanban>
      </field>
    </record>

  </data>
</odoo>